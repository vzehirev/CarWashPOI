@model CarWashPOI.ViewModels.Articles.ReadArticleOutputModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="jumbotron p-1 w-75 mx-auto my-4">
    <img style="width: 100%;" class="rounded" src="@Model.ImageUrl" />
    <h4 class="display-4 text-center">@Model.Title</h4>
    <p class="lead text-center">Добавена на @Model.AddedOn.ToShortDateString() от @Model.User.</p>
    <hr class="my-4">
    <div class="px-4">@Html.Raw(Model.Content)</div>
</div>

<div class="row justify-content-center text-center mx-auto">
    <a asp-area="Administration" asp-controller="Articles" asp-action="Approve" asp-route-id="@Model.Id" class="btn btn-success mr-5">Одобри</a>
    <a asp-area="Administration" asp-controller="Articles" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ml-5">Изтрий</a>
</div>