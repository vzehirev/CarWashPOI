@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Забравена парола?";
}

<h1 class="mx-auto justify-content-center text-center">@ViewData["Title"]</h1>

<div class="col-md-4 mx-auto justify-content-center text-center">
    <hr />
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">ПРОДЪЛЖИ</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
