@page
@model LoginModel

@{
    ViewData["Title"] = "ЛОГНИ СЕ";
}

<h1 class="mx-auto justify-content-center text-center">@ViewData["Title"]</h1>

<div class="col-md-4 mx-auto justify-content-center text-center">
    @if (TempData["passwordReset"] as bool? == true)
    {
        <div class="alert alert-dismissible alert-success text-center">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            Новата парола е изпратена на Вашия e-mail.
        </div>
    }
    <section>
        <form id="account" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.UsernameOrEmail"></label>
                <input asp-for="Input.UsernameOrEmail" class="form-control" />
                <span asp-validation-for="Input.UsernameOrEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">ЛОГНИ МЕ</button>
            </div>
            <div class="form-group">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Забравена парола?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрирай се</a>
                </p>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
