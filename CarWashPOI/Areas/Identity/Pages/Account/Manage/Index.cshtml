@page
@model IndexModel
@{
    ViewData["Title"] = "Промени потребителско име";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.NewUsername"></label>
                <input asp-for="Input.NewUsername" class="form-control" />
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Запази</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}